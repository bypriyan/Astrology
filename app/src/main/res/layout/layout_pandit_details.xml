<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Left-side image -->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_140sdp"
                android:src="@drawable/temp_pandit_new"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Pandit name -->
            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pandit ji Name"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView4" />

            <!-- Green tick -->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/green_tick_icon"
                app:layout_constraintStart_toEndOf="@id/categoryName"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Favorite icon -->
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/hear_filled"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Online status -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="#157b11"
                android:textSize="@dimen/_8ssp"
                android:background="@drawable/lite_green_bg"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/categoryName"
                app:layout_constraintStart_toEndOf="@id/imageView4" />

            <!-- Divider -->
            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/dark_greay"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:layout_constraintStart_toEndOf="@id/imageView4"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Services -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puja | Kundali | Vastu"
                android:textColor="@color/dark_greay"
                android:textSize="@dimen/_9ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toEndOf="@id/imageView4" />

            <!-- Language -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language - English, Hindi"
                android:textColor="@color/dark_greay"
                android:textSize="@dimen/_8ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintStart_toEndOf="@id/imageView4" />

            <!-- Star icon -->
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/star_icon"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:layout_constraintStart_toEndOf="@id/imageView4" />

            <!-- Rating -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8 (6,362 reviews)"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semi_bold"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:layout_constraintStart_toEndOf="@id/imageView6" />

            <!-- Price -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹115/min"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="@id/textView8"
                app:layout_constraintBottom_toBottomOf="@id/textView8"
                app:layout_constraintStart_toEndOf="@id/imageView4" />

            <!-- Consult Now -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consult Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/green_bg"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/textView5"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/lite_greay"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/chat_icon_rename"
                    app:tint="@color/greay"
                    android:padding="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60k mins"
                    android:textColor="@color/greay"
                    android:textSize="@dimen/_9ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:layout_constraintStart_toEndOf="@id/imageView6" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/lite_greay"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/call_icon"
                    app:tint="@color/greay"
                    android:padding="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30k mins"
                    android:textColor="@color/greay"
                    android:textSize="@dimen/_9ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:layout_constraintStart_toEndOf="@id/imageView6" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:gravity="center"
                android:background="@drawable/yellow_bg_orange_outline_background"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/video_call_icon"
                    app:tint="@color/black"
                    android:padding="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="watch Intro"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:layout_constraintStart_toEndOf="@id/imageView6" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
